<Window
    x:Class="TThrough.mvvm.ViewModel.PaginaConfiguracion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TThrough.mvvm.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PaginaConfiguracion"
    Width="400"
    Height="500"
    Background="#36393F"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />

            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            Grid.ColumnSpan="2"
            Background="#252525"
            MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label
                    Content="Talkthrough - Configuracion"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Minimizar_Click"
                        Content="🗕"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,2"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Maximizar_Click"
                        Content="□"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />

                    <Button
                        Width="20"
                        Height="20"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Cerrar_Click"
                        Content="🞩"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Border
                Width="100"
                Height="100"
                Margin="20"
                BorderBrush="White"
                CornerRadius="75">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding FotoPerfil}" Stretch="UniformToFill" />
                </Border.Background>
            </Border>
            <Button
                Width="150"
                Height="30"
                Background="#FF7043"
                Command="{Binding EjecutarBuscarArchivo}"
                Content="CAMBIAR FOTO DE PERFIL"
                FontSize="10"
                Foreground="White"
                Style="{StaticResource RoundedButton}" />
            <Label
                Width="200"
                Margin="10,10,0,10"
                Content="Nombre de usuario"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White" />
            <TextBox
                Width="200"
                VerticalContentAlignment="Center"
                IsEnabled="False"
                Style="{StaticResource RoundedTextBox}"
                Text="{Binding NombreUsuario}" />
            <Label
                Width="200"
                Margin="10,10,0,10"
                Content="Nombre publico"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White" />
            <TextBox
                Width="200"
                VerticalContentAlignment="Center"
                Style="{StaticResource RoundedTextBox}"
                Text="{Binding NombrePublico}" />
            <StackPanel
                Margin="70"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="30"
                    Margin="0,0,50,0"
                    Background="#B22222"
                    Click="Cancelar_Click"
                    Content="CANCELAR"
                    Foreground="White"
                    Style="{StaticResource RoundedButton}" />
                <Button
                    Width="100"
                    Height="30"
                    Background="#FF7043"
                    Command="{Binding GuardarCambiosCommand}"
                    Content="ACEPTAR"
                    Foreground="White"
                    Style="{StaticResource RoundedButton}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
