<Window
    x:Class="TThrough.mvvm.View.PopUpSolicitudesPendientes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TThrough.mvvm.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PopUpSolicitudesPendientes"
    Width="400"
    Height="450"
    Background="#444444"
    WindowStyle="None"
    mc:Ignorable="d">




    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>

        <Border Background="#252525" MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label
                    Content="SOLICITUDES PENDIENTES"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Minimizar_Click"
                        Content="🗕"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,2"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Maximizar_Click"
                        Content="□"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Cerrar_Click"
                        Content="🞩"
                        FontWeight="Bold"
                        Foreground="White" />

                </StackPanel>
            </Grid>
        </Border>


        <ListView
            Grid.Row="1"
            Background="Transparent"
            BorderBrush="Transparent"
            ItemsSource="{Binding Solicitudes}"
            SelectedItem="{Binding SolicitudSeleccionada}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="28"
                            Height="28"
                            Source="{Binding FtPerfil}" />
                        <Label
                            Content="{Binding NombreUsuario}"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation=" Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="0,0,50,0"
                Background="#B22222"
                Command="{Binding rechazarUser}"
                Content="RECHAZAR"
                Foreground="White"
                Style="{StaticResource RoundedButton}" />
            <Button
                Width="100"
                Height="30"
                Background="#FF7043"
                Command="{Binding añadirUser}"
                Content="ACEPTAR"
                Foreground="White"
                Style="{StaticResource RoundedButton}" />
        </StackPanel>
    </Grid>

</Window>
