<Window
    x:Class="TThrough.mvvm.View.TalkThrough"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TThrough"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TalkThrough"
    Width="1280"
    Height="720"
    Background="#36393F"
    WindowStyle="None"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="26" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2" Background="#252525">
            <Grid HorizontalAlignment="Stretch">
                <Label
                    Content="Talkthrough"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Minimizar_Click"
                        Content="🗕"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,2"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Maximizar_Click"
                        Content="□"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />

                    <Button
                        Width="20"
                        Height="20"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Cerrar_Click"
                        Content="🞩"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource AccionesButton}" />
                </StackPanel>
            </Grid>
        </Border>


        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="#444444"
            BorderBrush="AliceBlue">
            <StackPanel
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="Añadir Amigo"
                    FontFamily="Arial"
                    FontSize="8"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Style="{StaticResource AccionesButton}" />
                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="Añadir Chat"
                    FontFamily="Arial"
                    FontSize="8"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Style="{StaticResource AccionesButton}" />
            </StackPanel>


        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.25*" />
            </Grid.RowDefinitions>

            <ListView
                Background="Transparent"
                BorderBrush="Transparent"
                ItemsSource="{Binding Chats}"
                SelectedItem="{Binding SelectedItem}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                            <Image
                                Width="28"
                                Height="28"
                                Source="{Binding NombreChat}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button
                Grid.Row="3"
                Width="200"
                Height="40"
                VerticalAlignment="Center"
                Background="#FF7043"
                Content="CONFIGURACION"
                FontFamily="Arial"
                FontWeight="Bold"
                Foreground="White"
                Style="{StaticResource RoundedButton}" />
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="555.2" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ListBox
                Background="Transparent"
                BorderBrush="Transparent"
                ItemsSource="{Binding ChatLineas}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <Image
                                Width="28"
                                Height="28"
                                Source="{Binding FtPerfil}" />

                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                <TextBlock
                                    FontFamily="Arial"
                                    Foreground="White"
                                    Text="{Binding NombrePublico}"
                                    TextAlignment="Left" />
                                <TextBlock
                                    FontFamily="Arial"
                                    Foreground="White"
                                    Text="{Binding CuerpoMensaje}"
                                    TextAlignment="Left" />
                            </StackPanel>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBox
                x:Name="TextBoxChat"
                Grid.Row="1"
                Width="900"
                Height="50"
                HorizontalAlignment="Left"
                Style="{StaticResource RoundedTextBox}"
                Text="{Binding Mensaje, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Grid.Row="1"
                Width="100"
                Height="40"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Background="#FF7043"
                Command="{Binding _enviarCommand}"
                Content="Enviar"
                Foreground="White"
                Style="{StaticResource RoundedButton}" />
        </Grid>
    </Grid>
</Window>
