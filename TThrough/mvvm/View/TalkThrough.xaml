<Window x:Class="TThrough.mvvm.View.TalkThrough"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TThrough"
        xmlns:viewmodel="clr-namespace:TThrough.mvvm.ViewModel"
        mc:Ignorable="d"
        Background="#36393F"
        Title="TalkThrough" Height="720" Width="1280"
        WindowStyle="None">

    <Window.DataContext>
        <viewmodel:TalkthroughViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#252525">
            <Grid HorizontalAlignment="Stretch">
                <Label Foreground="White" 
                       Content="Talkthrough" 
                       FontWeight="SemiBold"/>
                <StackPanel HorizontalAlignment="Right"
            Orientation="Horizontal">

                    <Button Width="20" Height="20"
                            Content="🗕"
                            Margin="0,0,0,3"
                            Foreground="White"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Minimizar_Click"/>

                    <Button Width="20" Height="20"                            
                        Content="□"
                        Margin="0,0,0,2"
                        Foreground="White"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Maximizar_Click"/>

                    <Button Width="20" Height="20"
                            Content="🞩"
                            Foreground="White"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Cerrar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>

            <ListView Background="Transparent"
                      BorderBrush="Transparent"
                      ItemsSource="{Binding Usuarios}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding FotoPerfil}"
                                   Height="28"
                                   Width="28"/>
                            <StackPanel Orientation="Vertical">
                                <Label Content="{Binding NombrePublico}"
                                       Foreground="White"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       Padding="0"/>
                                <Label Content="Conectado"
                                       Foreground="White"
                                       FontFamily="Arial"
                                       FontWeight="Bold"
                                       Padding="0"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="1" Style="{StaticResource RoundedButton}"
                    Height="40" Width="150"
                    Background="#FF7043"
                    Foreground="White"
                    Content="CONFIGURACION"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="555.2"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Background="Transparent" 
                     IsReadOnly="True"
                     BorderBrush="Transparent"
                     Focusable="False"
                     IsEnabled="False"/>
            <TextBox Grid.Row="1" Style="{StaticResource RoundedTextBox}" 
                     Height="50"
                     Width="900"
                     HorizontalAlignment="Left"/>
            <Button Grid.Row="1" HorizontalAlignment="Right" Style="{StaticResource RoundedButton}"
                    Width="100" Height="40"
                    Margin="0,0,10,0"
                    Background="#FF7043"
                    Foreground="White"
                    Content="Enviar"/>
        </Grid>
    </Grid>
</Window>
