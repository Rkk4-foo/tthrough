<Window
    x:Class="TThrough.mvvm.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TThrough"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:TThrough.mvvm.ViewModel"
    Title="MainWindow"
    Width="400"
    Height="500"
    Background="#36393F"
    Loaded="Window_Loaded"
    WindowStyle="None"
    mc:Ignorable="d">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Background="#252525" MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label
                    Content="Login"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,3"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Minimizar_Click"
                        Content="🗕"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,0,0,2"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Maximizar_Click"
                        Content="□"
                        FontWeight="Bold"
                        Foreground="White" />

                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Cerrar_Click"
                        Content="🞩"
                        FontWeight="Bold"
                        Foreground="White" />

                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <Label
                    Padding="0,20,0,10"
                    Content="Usuario"
                    FontFamily="Arial"
                    FontWeight="SemiBold"
                    Foreground="White" />


                <TextBox
                    Height="24"
                    Padding="0,0,0,10"
                    Style="{StaticResource RoundedTextBox}"
                    Text="{Binding NombreUsuario}" />



                <Label
                    Padding="0,20,0,10"
                    Content="Contraseña"
                    FontFamily="Arial"
                    FontWeight="SemiBold"
                    Foreground="White" />

                <PasswordBox
                    Height="24"
                    Padding="0,0,0,10"
                    PasswordChanged="EnviarAVM"
                    PasswordChar="*"
                    Style="{StaticResource RoundedPwdBox}">
                    <PasswordBox.InputBindings>
                        <!--  DESACTIVAR CTRL+C (COPIAR)  -->
                        <KeyBinding
                            Key="C"
                            Command="ApplicationCommands.NotACommand"
                            Modifiers="Control" />
                        <!--  DESACTIVAR CTRL+X (CORTAR)  -->
                        <KeyBinding
                            Key="X"
                            Command="ApplicationCommands.NotACommand"
                            Modifiers="Control" />
                    </PasswordBox.InputBindings>
                    <PasswordBox.ContextMenu>
                        <!--  Desactiva la capacidad de sacar el menu contextual desde el que se podría copiar/cortar  -->
                        <ContextMenu Visibility="Collapsed" />
                    </PasswordBox.ContextMenu>
                </PasswordBox>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <Button
                    Width="150"
                    Height="40"
                    Margin="0,20,0,10"
                    Background="#FF7043"
                    Command="{Binding ComandoLogin}"
                    Content="LOGIN"
                    FontFamily="Arial"
                    FontWeight="Bold"
                    Foreground="White"
                    Style="{StaticResource RoundedButton}" />

                <Button
                    Width="150"
                    Height="40"
                    Margin="0,20,0,10"
                    Background="#FF7043"
                    Command="{Binding ComandoRegistro}"
                    Content="REGISTRARSE"
                    FontFamily="Arial"
                    FontWeight="Bold"
                    Foreground="White"
                    Style="{StaticResource RoundedButton}" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
