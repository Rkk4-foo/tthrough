<Window x:Class="TThrough.mvvm.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TThrough"
        xmlns:viewmodel="clr-namespace:TThrough.mvvm.ViewModel"
        mc:Ignorable="d"
        Background="#36393F"
        WindowStyle="None"
        Title="MainWindow" Height="500" Width="400"
        Loaded="Window_Loaded">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#252525" MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Foreground="White" 
                       Content="Login" 
                       FontWeight="SemiBold"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Width="20" Height="20"
                            Content="🗕"
                            Margin="0,0,0,3"
                            Foreground="White"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Minimizar_Click"/>

                    <Button Width="20" Height="20"                            
                            Content="□"
                            Margin="0,0,0,2"
                            Foreground="White"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Maximizar_Click"
                            />

                    <Button Width="20" Height="20"
                            Content="🞩"
                            Foreground="White"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Cerrar_Click"/>

                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical"
                        VerticalAlignment="Top">

                <Label Content="Usuario" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       FontFamily="Arial"
                       Padding="0,20,0,10"/>


                <TextBox Style="{StaticResource RoundedTextBox}"                              
                             Height="24"
                             Padding="0,0,0,10"
                         Text="{Binding NombreUsuario}"
                             />



                <Label Content="Contraseña" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       FontFamily="Arial"
                       Padding="0,20,0,10"/>
                
                <PasswordBox Style="{StaticResource RoundedPwdBox}" 
                             Height="24"
                             Padding="0,0,0,10"
                             PasswordChar="*"
                             PasswordChanged="EnviarAVM">
                    <PasswordBox.InputBindings>
                        <!--DESACTIVAR CTRL+C (COPIAR) -->
                        <KeyBinding Command="ApplicationCommands.NotACommand"
                        Key="C"
                        Modifiers="Control" />
                        <!--DESACTIVAR CTRL+X (CORTAR) -->
                        <KeyBinding Command="ApplicationCommands.NotACommand"
                        Key="X"
                        Modifiers="Control" />
                    </PasswordBox.InputBindings>
                    <PasswordBox.ContextMenu>
                        <!--Desactiva la capacidad de sacar el menu contextual desde el que se podría copiar/cortar-->
                        <ContextMenu Visibility="Collapsed" />
                    </PasswordBox.ContextMenu>
                </PasswordBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="2"
                        VerticalAlignment="Top" Orientation="Vertical">

                <Button Style="{StaticResource RoundedButton}"
                        Height="40" Width="150" Background="#FF7043" 
                        Command="{Binding ComandoLogin}"
                        Margin="0,20,0,10"
                        Content="LOGIN"
                        Foreground="White"
                        FontFamily="Arial"
                        FontWeight="Bold"/>

                <Button Style="{StaticResource RoundedButton}"
                        Height="40" Width="150" Background="#FF7043" 
                        Command="{Binding ComandoRegistro}"
                        Margin="0,20,0,10"
                        Content="REGISTRARSE"
                        Foreground="White"
                        FontFamily="Arial"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
